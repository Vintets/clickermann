$filename = "config.ini"
#logfile


SUB (WriteCoord, $Button_Name, $section)
   
   While(iskeydown(1)=0)
      WAITMS(10)
   END_CYC
   
   $name = STRCONCAT($Button_Name, "_X")
   INIWRITE($filename, $name, $_xmouse, $section)
   
   $name = STRCONCAT($Button_Name, "_Y")
   INIWRITE($filename, $name, $_ymouse, $section)
   
END_SUB


SUB (Coordclose)
   $Result = RADIOBOX("Какие координаты вы хотите изменить?", "1 - кнопка 'Закрыть'", "2 - кнопка 'Закрыть (окно гильдии)'")
   $Result =  INT(STRCUT($Result, 1, 1))
   IF($Result  = 1)
      WriteCoord("Button_Close", "Button_Close")
   END_IF
   IF($Result  = 2)
      WriteCoord("Icon_CloseWide", "Button_CloseWide")
   END_IF
END_SUB

SUB (CoordErrands)
   //$dialog = 1
