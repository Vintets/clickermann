#include "thronelib.cms"
#logfile

//основной алгоритм
LOGCLEAR


// поток
THREAD(thr_name)
 	#include "thronelib.cms"
    waitms(60*1000) // задержка для разгрузки CPU
  HelpOrderMembers()
END_THREAD

setThread(thr_name, 1)

